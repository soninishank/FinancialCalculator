#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "Verifying project stability before push..."

echo "1. Running Tests..."
npm test || { echo "Tests failed! Push aborted."; exit 1; }

echo "2. Running Build Check..."
npm run build || { echo "Build failed! Push aborted."; exit 1; }

echo "Success! Proceeding with push."
